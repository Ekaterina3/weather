$chx-sizes = {
	width: 20px,
	height: 20px,
}
$chx-coords = {
	x: 0,
	y: 0,
}
$chx-inactive = {
	border-color: get-color('base4'),
}
$chx-active = {
	background: get-color('base2'),
	border-color: get-color('base2'),
}
$chx-tick-color = get-color('base3')

$root = '.c-radio'

{$root}
	position relative
	display inline-block

	&__native
		position absolute
		top: $chx-coords.y
		left: $chx-coords.x
		z-index -1
		margin 0
		padding 0
		border none
		width: $chx-sizes.width
		height: $chx-sizes.height
		opacity 0

		&:checked + {$root}__label {$root}__control
			border: 4px solid $chx-active.border-color

	&__control
		position absolute
		top: $chx-coords.y
		left: $chx-coords.x
		z-index 5
		width: $chx-sizes.width
		height: $chx-sizes.height
		border: 1px solid $chx-inactive.border-color
		border-radius 50%
		transition background .1s linear, border-color .1s linear

	&__label
		display inline-block
		margin-left 35px
		padding-top 3px
		cursor pointer
